<body>
  <%- include('../includes/navigation.ejs') %>
<main>
  <% if(orders.length <= 0) {%>
    <h1>No order found</h1>
    <% } else { %>
      <ul>
     <% orders.forEach((order) => { %>
          <li># <%= order._id %> - <a href="/order/<%= order._id%>">Invoice</a></li>
          <ul>
            <% order.products.forEach((p) => { %>
              <li><%= p.product.title %>(<%= p.quantity %>)</li>

              <% }) %>
          </ul>

      <% }) %>
    </ul>
      <% }%>
</main>
  <%- include('../includes/end.ejs') %>