<%- include('../includes/start.ejs') %>
</head>
<body>
  <%- include('../includes/navigation.ejs') %>
  <main>
<% if( productData.length > 0) { %>
  <ul>
    <% productData.forEach(product =>{ %>
      <li>
        <p><%=product.productId.title%> (Quantity:-<%=product.quantity%>)</p>
        <form action="/cart-delete-item" method="POST">
<input type="hidden" value="<%=product.productId._id%>" name="productId"/>
<input type="hidden" name="_csrf" value="<%= csrfToken %>" />
<button class="btn" type="submit">DELETE</button>
        </form>
        
      </li>
      <% }) %>
  </ul>
  <br/>
  <hr/>
  <form action="/order-item" method="POST">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
    <button class="btn" type="submit">Order</button>
            </form>
<%} else { %>
  <h1>No Cart Products Found</h1>
  <% } %>
  </main>
  
<%- include('../includes/end.ejs') %>